<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
     This list gets executed from the top to the bottom, if the state fits
      the next item wont be checked, so if the state is not pressed it will use the default drawable
      because its the last item in  the list-->
    <item
        android:state_checked="true"
        android:drawable="@drawable/reminders_fragment_day_button_pressed" />

    <!--default drawable -->
    <item
        android:drawable="@drawable/reminders_fragment_day_button_default"/>




</selector>