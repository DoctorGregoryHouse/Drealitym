<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="20">

    <TextView
        android:id="@+id/edit_text_head"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_dream_edit_text_head"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:maxLines="1"
        android:maxLength="18"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="@string/add_dream_edit_text_title"/>

    <EditText
        android:id="@+id/edit_text_field"
        android:padding="5dp"
        android:gravity="top|left"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/edit_text_head"
        android:background="#ffffff"
        android:hint="After i fell asleep..." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_below="@+id/edit_text_field"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/audio_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ADD AUDIO FILE"/>



    </LinearLayout> <!-- Audio Buttons -->





    <LinearLayout
        android:id="@+id/spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_below="@id/audio_layout"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp"
            android:text="Was a lucid dream?"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/dream_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </Spinner>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#ffffff">

        <Button
            android:id="@+id/add_dream_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="add DREam"/>
    </LinearLayout>

</LinearLayout>