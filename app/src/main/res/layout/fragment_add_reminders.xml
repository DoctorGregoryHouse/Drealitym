<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#440053">

    <TextView
        android:id="@+id/reminders_fragment_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/reminders_fragment_name_text"
        android:textSize="20sp"
        android:textColor="#fff"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/reminder_fragment_edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminders_fragment_name_text_view"
        android:backgroundTint="#fff" />


    <LinearLayout
        android:id="@+id/reminder_fragment_linear_layout_both"
        android:layout_below="@+id/reminder_fragment_edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/reminder_fragment_linear_layout_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ToggleButton
                android:id="@+id/reminder_fragment_toggle_button_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_monday"
                android:textOn="@string/reminders_fragment_day_monday"
                android:background="@drawable/reminders_fragment_day_button" />

            <ToggleButton
                android:id="@+id/reminder_fragment_toggle_button_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_tuesday"
                android:textOn="@string/reminders_fragment_day_tuesday"
                android:background="@drawable/reminders_fragment_day_button" />

            <ToggleButton

                android:id="@+id/reminder_fragment_toggle_button_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"

                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_wednesday"
                android:textOn="@string/reminders_fragment_day_wednesday"
                android:background="@drawable/reminders_fragment_day_button" />

            <ToggleButton
                android:id="@+id/reminder_fragment_toggle_button_thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_thursday"
                android:textOn="@string/reminders_fragment_day_thursday"
                android:background="@drawable/reminders_fragment_day_button" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ToggleButton
                android:id="@+id/reminder_fragment_toggle_button_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_friday"
                android:textOn="@string/reminders_fragment_day_friday"
                android:background="@drawable/reminders_fragment_day_button" />

            <ToggleButton
                android:id="@+id/reminder_fragment_toggle_button_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_saturday"
                android:textOn="@string/reminders_fragment_day_saturday"
                android:background="@drawable/reminders_fragment_day_button" />

            <ToggleButton
                android:id="@+id/reminder_fragment_toggle_button_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textOff="@string/reminders_fragment_day_sunday"
                android:textOn="@string/reminders_fragment_day_sunday"
                android:background="@drawable/reminders_fragment_day_button" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/reminder_fragment_start_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_fragment_linear_layout_both"
        android:layout_alignBottom="@+id/reminder_fragment_start_time_edit_text"
        android:gravity="center"
        android:text="Remind me from"
        android:textSize="30dp"
        android:textColor="#fff" />


    <EditText
        android:id="@+id/reminder_fragment_start_time_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_fragment_linear_layout_both"
        android:layout_toRightOf="@+id/reminder_fragment_start_title_text_view"
        android:text="00:00"
        android:textSize="30dp"
        android:textColor="#fff"
        android:focusable="false"
        android:textIsSelectable="true"/>


    <TextView
        android:id="@+id/reminder_fragment_stop_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminder_fragment_start_time_edit_text"
        android:layout_alignBottom="@+id/reminder_fragment_stop_time_edit_text"
        android:gravity="center"
        android:text="until"
        android:textSize="30dp"
        android:textColor="#fff" />


    <EditText
        android:id="@+id/reminder_fragment_stop_time_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reminder_fragment_start_title_text_view"
        android:layout_toRightOf="@+id/reminder_fragment_stop_title_text_view"
        android:text="00:00"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/reminder_fragment_text_view_interval_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_fragment_stop_time_edit_text"
        android:text="Interval"
        android:textSize="30dp"
        android:textColor="#fff"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/reminder_fragment_spinner_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reminder_fragment_text_view_interval_title"
        android:outlineAmbientShadowColor="#fff"
        android:outlineSpotShadowColor="#fff">


    </android.support.v7.widget.AppCompatSpinner>


    <Button
        android:id="@+id/reminder_fragment_button_discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="DISCARD"
        />

    <Button
        android:id="@+id/reminder_fragment_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="SAVE"/>


</RelativeLayout>